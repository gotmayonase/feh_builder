<div class="container">
  <div class="mdl-cell mdl-cell--12-col">
    <div class="page__heading flex__items--center">
      <div class="page__heading-text">
        <h3 class="page__heading-title">New Build</h3>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--4-col-phone">
    <div class="mdl-card mdl-card--2dp block--full mdl-shadow--2dp">

      <div class="mdl-grid block--full u-padding--20">
        <div class="mdl-cell mdl-cell--12-col">
          <%= image_tag @hero.image.url, width:100, height: 100 %>
        </div>

        <div class="mdl-cell mdl-cell--12-col">
          <h4><%= @hero.name %></h4>
        </div>
      </div>

      <%= simple_form_for [@hero, @build] do |f| %>
        <div class="mdl-grid block--full u-padding--20">
          <%= f.input :hero_id, as: :hidden %>
          <div class="mdl-cell mdl-cell--12-col">
            <%= f.input :weapon_id, as: :select, collection: Weapon.assigned.order(:name) %>
          </div>

          <div class="mdl-cell mdl-cell--12-col">
            <%= f.input :assist_id, as: :select, collection: Assist.assigned.order(:name) %>
          </div>

          <div class="mdl-cell mdl-cell--12-col">
            <%= f.input :special_id, as: :select, collection: Special.assigned.order(:name) %>
          </div>

          <div class="mdl-cell mdl-cell--12-col">
            <%= f.input :a_passive_id, as: :select, collection: APassive.assigned.order(:name) %>
          </div>

          <div class="mdl-cell mdl-cell--12-col">
            <%= f.input :b_passive_id, as: :select, collection: BPassive.assigned.order(:name) %>
          </div>

          <div class="mdl-cell mdl-cell--12-col">
            <%= f.input :c_passive_id, as: :select, collection: CPassive.assigned.order(:name) %>
          </div>

          <div class="mdl-card__actions mdl-card--border mdl-card__actions--right">
            <%= f.submit class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--gray' %>
          </div>

        </div>
      <% end %>

    </div>
  </div>
</div>
